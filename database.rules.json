{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "events": {
      ".read": true,
      ".write": "auth != null && !data.exists()",
      ".validate": "newData.hasChildren(['title', 'location', 'startTime', 'endTime'])"
    }
  }
}{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "events": {
      ".read": true,
      "$eventID": {
        ".write": "auth != null && newData.child('creator').val() === auth.uid",
     	  ".validate": "newData.hasChildren(['title', 'creator', 'location', 'startTime', 'endTime'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length > 1"
        },
        "location": {
          ".validate": "newData.isString() && newData.val().length > 2"
        },
        "startTime": {
          ".validate": "newData.isNumber()"
        },
        "endTime": {
          ".validate": "newData.isNumber()"
        } 
      }
    }
  }
}